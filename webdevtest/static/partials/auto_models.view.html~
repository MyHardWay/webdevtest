<h3>Все реквизиты в виде таблицы</h3>
<div ng-controller="samplecontoller">
	<form class="form-inline" name="userForm">
		<table class="table">
			<tr ng-repeat="(key, value) in selectedCar" ng-if='key =="name"'>
				    <td>{{ key }}</td>
				    <td><input type="text" ng-model="userForm.auto_name" class="input-small" value="{{value}}" ng-init="userForm.auto_name=value" required></td>
			</tr>
			<tr ng-repeat="(key, value) in selectedCar" ng-if='key !="name"'>
			    <td>{{ key }}</td>
			    <td>{{ value }}</td>
			</tr>	
		</table>
		<button type="submit" class="btn btn-primary" ng-click="useData()" ng-disabled="userForm.$invalid">Сохранить</button>
		<button type="submit" class="btn btn-primary" ng-click="deleteCar()">Удалить</button>
		<div class="row">
			<span ng-show="userForm.error">{{userForm.error}}</span>
		</div>

	</form>
</div>



